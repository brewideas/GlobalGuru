        <activity
            android:name=".NoticeficationPanel.StatsActivity"
            android:label="Notification" />
        <activity
            android:name=".ui.AppStart.BeforeLoginScreen"
            android:label="@string/title_activity_before_login_screen" />
        <activity
            android:name=".ui.AppStart.MyProfile"
            android:label="@string/title_activity_my_profile" />
