<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.co.thingsdata.gurukul.ui.AppStart.MyProfile"
    tools:showIn="@layout/fees_profile_non_editabe">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/profileDisplay"
    >

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/card"
        android:layout_above="@+id/btn_ok"
        android:id="@+id/topView"
        android:fillViewport="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/profileFees"
            >

            <android.support.v7.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:elevation="12dp"
                android:layout_marginTop="5dp"
                android:id="@+id/profileImageInfees"
                app:cardCornerRadius="40dp"
                android:layout_centerHorizontal="true"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.9">
                <ImageView
                    android:layout_height="80dp"
                    android:layout_width="match_parent"
                    android:id="@+id/imageView1"
                    android:src="@drawable/attendance"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">
                </ImageView>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profileImageInfees"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                android:id="@+id/rowOne"
                android:layout_marginTop="@dimen/activity_top_margin">

                <TextView
                    android:text="Student Name"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Name"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="20sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"

                    android:layout_marginRight="14dp"
                    android:layout_marginLeft="@dimen/component_left_margin"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nameFees"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:layout_marginLeft="25dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Raja Ram"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rowTwo"
                android:layout_below="@+id/rowOne"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="@dimen/activity_top_margin">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="Class"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginRight="14dp"
                    android:layout_marginLeft="@dimen/component_left_margin"/>

                <TextView
                    android:layout_width="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:layout_height="wrap_content"
                    android:id="@+id/classfees"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:layout_marginLeft="108dp"
                    android:text="88"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rowThree"
                android:layout_below="@+id/rowTwo"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="@dimen/activity_top_margin">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="Registration Id"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginRight="14dp"
                    android:layout_marginLeft="@dimen/component_left_margin"/>

                <TextView
                    android:layout_width="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:layout_height="wrap_content"
                    android:id="@+id/regId"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:layout_marginLeft="22dp"
                    android:text="88"
                    />



            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rowFour"
                android:layout_below="@+id/rowThree"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="@dimen/activity_top_margin">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="Father Name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginRight="14dp"
                    android:layout_marginLeft="@dimen/component_left_margin"/>

                <TextView
                    android:layout_width="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:layout_height="wrap_content"
                    android:id="@+id/fathernameTv"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:layout_marginLeft="38dp"
                    android:text="88"
                    />



            </LinearLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rowFive"
                android:layout_below="@+id/rowFour"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="@dimen/activity_top_margin">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Month"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorAccent"
                    android:layout_marginRight="14dp"
                    android:layout_marginLeft="@dimen/component_left_margin"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/monthTv"
                    android:fontFamily="sans-serif-medium"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:layout_marginLeft="95dp"
                    android:text="88"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rowSix"
                android:layout_below="@+id/rowFive"
                android:paddingTop="10dp"
                android:weightSum="3"
                android:paddingLeft="10dp"
                android:layout_marginTop="@dimen/activity_top_margin">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewDa"
                    android:textSize="20sp"
                    android:text="Late fees paid"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorAccent"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="@dimen/component_left_margin"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lateFeesTv"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Date Not available"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="27dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rowSeven"
                android:layout_below="@+id/rowSix"
                android:paddingTop="10dp"
                android:weightSum="3"
                android:paddingLeft="10dp"
                android:layout_marginTop="@dimen/activity_top_margin">

            <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewMonth"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Other Charges : "
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorAccent"
                    android:layout_marginLeft="@dimen/component_left_margin"/>
                    android:layout_marginRight="14dp"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/otherChargesTv"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginLeft="21dp"
                    android:text="0"
                    />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rowEight"
                android:layout_below="@+id/rowSeven"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="@dimen/activity_top_margin">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewPay"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Total :"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorAccent"
                    android:layout_marginRight="14dp"
                    android:layout_marginLeft="@dimen/component_left_margin"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/feesTotalTv"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginLeft="95dp"
                    android:text="0"
                    />


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:id="@+id/rowNine"
                android:layout_below="@+id/rowEight"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="@dimen/activity_top_margin">



            </LinearLayout>


    </RelativeLayout>
    </ScrollView>

               <Button
                   android:id="@+id/btn_ok"
                   android:layout_alignParentBottom="true"
                   android:layout_width="fill_parent"
                   android:layout_height="50dp"
                   android:layout_margin="10dp"
                   android:gravity="center"
                   android:onClick="feesProfile"
                   android:background="@drawable/loginbutton"
                   android:textColor="@color/card"
                   android:text="Ok"
                   android:textSize="16dp" />

             </RelativeLayout>
    </RelativeLayout>
