<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.co.thingsdata.gurukul.NoticeficationPanel.StatsActivity"
    tools:showIn="@layout/activity_stats">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YES"
        android:textColor="#000000"
        android:id="@+id/textView3"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO"
        android:textSize="20sp"
        android:id="@+id/textView5"
        android:textColor="#000000"
        android:layout_alignTop="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PENDING"
        android:textSize="20sp"
        android:layout_marginRight="10dp"
        android:id="@+id/textView6"
        android:textColor="#000000"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10/100"
        android:layout_marginLeft="24dp"
        android:id="@+id/yes"
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10/100"
        android:id="@+id/no"
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10/100"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/pending"
        android:textSize="17sp"
        android:layout_below="@+id/textView6"
        android:layout_alignEnd="@+id/textView6" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#000000"
        android:id="@+id/view"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/yes"
        android:layout_alignParentStart="true" />
    <View
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#000000"
        android:id="@+id/view1"

        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#000000"
        android:id="@+id/view2"

        android:layout_below="@+id/view1"
        android:layout_centerHorizontal="true">

    </View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:id="@+id/Student"
        android:layout_below="@+id/view"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teacher"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:id="@+id/textView9"
        android:layout_below="@+id/view"
        android:layout_toStartOf="@+id/pending" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User_Id"
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        android:id="@+id/textView7"
        android:layout_alignTop="@+id/view2"
        android:layout_alignStart="@+id/Student" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Answer"
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        android:id="@+id/textView10"
        android:layout_alignTop="@+id/view2"
        android:layout_toEndOf="@+id/no" />
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/statslistView"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp" />
</RelativeLayout>
