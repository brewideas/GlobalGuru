<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/yellow"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.co.thingsdata.gurukul.ui.AppStart.BeforeLoginScreen"
    tools:showIn="@layout/login_before_login_screen">

    <FrameLayout
        android:id="@+id/mainRLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/footerOfbeforelogin"
        >
    </FrameLayout >

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"

        android:id="@+id/footerOfbeforelogin"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:layout_height="50dp"
            android:layout_width="80dp"
            android:id="@+id/SignUpButton"
            android:layout_weight="1"
            android:onClick="showSignUpScreen"
            android:background="@drawable/loginbutton"
            android:text="Signup"
            />

        <Button
            android:layout_height="50dp"
            android:layout_width="80dp"
            android:id="@+id/LoginButton"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="Login"
            android:background="@drawable/loginbutton"
            android:onClick="showLoginScreen"
            />
    </LinearLayout>

</RelativeLayout>
