<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="wrap_content"
    android:layout_below="@+id/infoCard"
    android:id="@+id/inputInfo"
    android:background="@color/colorComponentBG"
    android:layout_width="250dp"

    xmlns:android="http://schemas.android.com/apk/res/android">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/headSpinner"
        card_view:cardBackgroundColor="@color/colorWhite"
        card_view:cardCornerRadius="4dp"
        android:elevation="5dp"
        android:fadingEdge="horizontal"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:id="@+id/spinerrow1"    >

        <RelativeLayout
            android:layout_width="118dp"
            android:id="@+id/spin1"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_class"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@drawable/spinnerbg"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:spinnerMode="dropdown" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="7dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@mipmap/dropdowns" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_section"
                android:layout_width="110dp"
                android:layout_marginLeft="5dp"
                android:hint="Section"
                android:background="@drawable/spinnerbg"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:layout_height="wrap_content"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="7dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@mipmap/dropdowns" />

        </RelativeLayout>

  </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/headSpinner2"
        card_view:cardBackgroundColor="@color/colorWhite"
        card_view:cardCornerRadius="4dp"
        android:elevation="5dp"
        android:fadingEdge="horizontal"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headSpinner"

        >
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinerrow2"
        android:layout_margin="5dp"
        android:paddingTop="10dp"
        >


        <RelativeLayout
            android:layout_width="118dp"
            android:id="@+id/spin3"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_year"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@drawable/spinnerbg"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:spinnerMode="dropdown" />

             <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="7dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@mipmap/dropdowns" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <Spinner
                android:id="@+id/spinner_type"
                android:layout_width="110dp"
                android:layout_marginLeft="5dp"
                android:hint="Section"
                android:background="@drawable/spinnerbg"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:layout_height="wrap_content"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="7dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@mipmap/dropdowns" />

        </RelativeLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
